#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <sys/types.h>
#include <sys/stat.h>
#include <fcntl.h>

#include "gestionFichiers.h"
#include "id.h"

int main() {
	
	int fileDesc;
	fileDesc = open("affichage-processus.txt",O_RDONLY);
	char* text = readFirstLine(fileDesc);
	int i, n = 4;
	pid_t pid;
	printf("\n");
	for(i = 0; i < n; i++) {
		pid = fork();
		if(pid == -1) {
			break;
		}
		if(pid == 0) {
			printf("Fils - ");
			currentAndParentProcessID(text, i);
			break;
		}else{
			printf("PÃ¨re - ");
			currentAndParentProcessID(text, i);
			while(wait(NULL) >= 0);
		}
	}
	return 0;
}
